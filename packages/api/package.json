{
  "name": "@diet/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Diet API service",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "dev": "wrangler dev",
    "watch": "tsup src/index.ts --format esm --dts --watch",
    "lint": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit",
    "deploy": "wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:check-migrations": "tsx scripts/check-migrations.ts",
    "db:migrate:local": "drizzle-kit migrate",
    "db:migrate:remote": "drizzle-kit migrate --remote",
    "db:seed:local": "tsx scripts/seed-db.ts",
    "db:reset:local": "npm run db:migrate:local && npm run db:seed:local",
    "db:status:local": "wrangler d1 execute DB --command=\"SELECT name FROM sqlite_master WHERE type='table'\"",
    "db:status:remote": "wrangler d1 execute DB --remote --command=\"SELECT name FROM sqlite_master WHERE type='table'\""
  },
  "dependencies": {
    "@diet/shared": "workspace:*",
    "@hono/node-server": "1.14.4",
    "hono": "4.7.11"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "drizzle-kit": "0.31.2",
    "drizzle-orm": "0.44.2",
    "tsx": "^4.7.1",
    "typescript": "~5.8.3"
  }
}
