{
  "name": "@diet/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Diet API service",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "dev": "npm run dev:local",
    "dev:local": "wrangler dev",
    "dev:dev": "wrangler dev --env dev-remote --remote",
    "watch": "tsup src/index.ts --format esm --dts --watch",
    "lint": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit",
    "deploy": "wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:check-migrations": "tsx scripts/check-migrations.ts",
    "db:migrate:local": "drizzle-kit migrate",
    "db:seed:local": "tsx scripts/seed-db-local.ts",
    "db:reset:local": "npm run db:migrate:local && npm run db:seed:local",
    "db:status:local": "wrangler d1 execute DB --local --command=\"SELECT name FROM sqlite_master WHERE type='table'\"",
    "db:migrate:dev": "dotenv -e .env.dev -- drizzle-kit migrate",
    "db:seed:dev": "TARGET_ENV=dev tsx scripts/seed-db-remote.ts",
    "db:reset:dev": "npm run db:migrate:dev && npm run db:seed:dev",
    "db:status:dev": "wrangler d1 execute DB --env dev-remote --remote --command=\"SELECT name FROM sqlite_master WHERE type='table'\"",
    "db:migrate:prod": "dotenv -e .env.prod -- drizzle-kit migrate",
    "db:seed:prod": "TARGET_ENV=prod tsx scripts/seed-db-remote.ts",
    "db:reset:prod": "npm run db:migrate:prod && npm run db:seed:prod",
    "db:status:prod": "wrangler d1 execute DB --remote --command=\"SELECT name FROM sqlite_master WHERE type='table'\""
  },
  "dependencies": {
    "@diet/shared": "workspace:*",
    "@graphql-yoga/plugin-csrf-prevention": "3.13.5",
    "@hono/node-server": "1.14.4",
    "@pothos/core": "4.7.0",
    "@pothos/plugin-drizzle": "0.10.6",
    "drizzle-zod": "0.8.2",
    "graphql": "16.11.0",
    "graphql-sse": "2.5.4",
    "graphql-yoga": "5.13.5",
    "hono": "4.7.11"
  },
  "devDependencies": {
    "@libsql/client": "0.15.9",
    "@types/node": "^20.11.24",
    "drizzle-kit": "0.31.2",
    "drizzle-orm": "0.44.2",
    "tsx": "^4.7.1",
    "typescript": "~5.8.3",
    "dotenv-cli": "^7.3.0"
  }
}
