# 使用 pnpm 作为包管理器
engine-strict=true
auto-install-peers=true

# 设置 registry
registry=https://registry.npmjs.org/

# 设置 node-linker 为 hoisted，提高兼容性
node-linker=hoisted

# 启用严格模式
strict-peer-dependencies=false
shamefully-hoist=true

# 设置缓存目录
cache-dir=.pnpm-store

# 设置日志级别
loglevel=info

# 设置包锁定文件
lockfile=true

# 设置工作空间
workspace-concurrency=4

# 设置包版本控制
save-exact=true
save-prefix=''

# 设置包发布配置
access=restricted 
