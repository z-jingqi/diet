{
  "name": "diet",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:local": "wrangler dev",
    "dev:dev": "wrangler dev --env dev-remote --remote",
    "deploy:prod": "wrangler deploy",
    "build": "turbo run build",
    "put-model": "wrangler secret put CLOUDFLARE_MODEL",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo run type-check",
    "prepare": "husky install",
    "eslint-fix": "echo \"\\033[1;33mRunning ESLint to fix auto-fixable issues...\\033[0m\" && eslint --fix \"./packages/*/src/**/*.{ts,tsx,js,jsx}\" --max-warnings=100 --no-error-on-unmatched-pattern || echo \"\\033[1;33mESLint completed with warnings/errors that require manual fixes.\\033[0m\"",
    "prettier-fix": "echo \"\\033[1;34mFormatting code with Prettier...\\033[0m\" && prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint-fix": "pnpm eslint-fix & pnpm prettier-fix && echo \"\\033[1;32mâœ“ Linting and formatting completed!\\033[0m\""
  },
  "dependencies": {
    "@microsoft/fetch-event-source": "2.0.1",
    "openai": "^5.5.1",
    "remark-gfm": "^4.0.1",
    "zod": "^3.25.58",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250613.0",
    "@eslint/js": "^9.25.0",
    "@graphql-codegen/add": "5.0.3",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@graphql-codegen/typescript-react-query": "^6.1.1",
    "@typescript-eslint/eslint-plugin": "8.34.1",
    "@typescript-eslint/parser": "8.34.1",
    "eslint": "^9.25.0",
    "globals": "^15.12.0",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "tsup": "^8.5.0",
    "tsx": "^4.20.0",
    "turbo": "^2.5.4",
    "typescript": "~5.8.3",
    "wrangler": "^4.20.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "typescript"
      ]
    }
  },
  "packageManager": "pnpm@10.12.2"
}
